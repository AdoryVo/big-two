generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String
  image       Bytes?
  lat         Float
  lng         Float
  author      String?
  likes       Int
  dislikes    Int
  createdAt   DateTime @default(now()) @map("created_at")
}
