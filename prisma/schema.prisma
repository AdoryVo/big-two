// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id            String     @default(cuid()) @id
  title         String
  description   String?
  category      String
  image         Bytes?
  lat           Float
  lng           Float
  author        String?
  likes         Int
  dislikes      Int
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}
