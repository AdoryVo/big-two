generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String
  image       String?
  lat         Float
  lng         Float
  likes       Int      @default(0)
  dislikes    Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
}
